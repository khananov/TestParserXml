<configuration debug="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <property resource="configuration.properties"/>
        <file>${log.file.path}/${log.file.name}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.file.path}/archived/${log.file.name}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

<!--    <logger name="ru.khananov" level="debug" additivity="false">-->
<!--        <appender-ref ref="FILE-ROLLING"/>-->
<!--    </logger>-->

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="ru.khananov" level="error">
        <appender-ref ref="FILE-ROLLING"/>
    </logger>

    <logger name="ru.khananov" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>